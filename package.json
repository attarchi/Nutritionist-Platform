{
    "name": "mansouri-nutritionist-platform",
    "version": "0.0.1",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev",
        "lint": "turbo run lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "clean": "turbo run clean && rm -rf node_modules"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.8.0",
        "@commitlint/config-conventional": "^19.8.0",
        "prettier": "^3.2.5",
        "turbo": "^1.12.4"
    },
    "packageManager": "yarn@4.9.1",
    "engines": {
        "node": ">=18.0.0"
    }
}
